<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="/stylesheets/challenge.css">
    {{>headComponent}}
  </head>
  <body>
    {{>navbarComponent}}
    <main>
      <header>{{newChallengeText}}</header>
      <form method="POST" action="/create/challenge">
        <input type="text" name="title" placeholder="{{titlePlaceholder}}">
        <textarea name="desc" rows="8" cols="80" placeholder="{{descPlaceholder}}"></textarea>
        <button type="submit">{{create}}</button>
      </form>
    </main>
    <script src="/scripts/errorPopup.js"></script>
    <script src="/scripts/challenge.js"></script>
  </body>
</html>
